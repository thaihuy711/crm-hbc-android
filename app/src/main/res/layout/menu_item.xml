<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_menu_item"
    android:orientation="vertical">

    <View
        android:id="@+id/view_divider_top"
        android:layout_width="wrap_content"
        android:layout_height="0.6dp"
        android:visibility="gone"
        android:background="#e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_content_menu">

        <ImageView
            android:id="@+id/imv_item"
            android:layout_width="@dimen/height_icon_menu"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logout"
            android:padding="5dp"/>

        <bys.crm.hbc.views.CustomFontTextView
            android:id="@+id/tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Mã nhân viên: NV-007"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/text_small_13"
            font:fontText="fonts/sf_pro_display_regular.otf" />
    </LinearLayout>

</LinearLayout>