<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_bg_navs"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imv_nav_left"
            android:layout_width="@dimen/nav_height"
            android:layout_height="@dimen/nav_height"
            android:background="@drawable/bg_nav_btn"
            android:padding="@dimen/padding_nav_icon"
            android:src="@drawable/ic_back_blue" />

        <bys.crm.hbc.views.CustomFontTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/nav_height"
            android:layout_marginRight="@dimen/nav_height"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="Title"
            android:textColor="#fff"
            android:textSize="@dimen/text_medium_16"
            android:textStyle="bold"
            font:fontText="fonts/sf_pro_display_medium.otf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_nav_right2"
                android:layout_width="@dimen/nav_height"
                android:layout_height="@dimen/nav_height"
                android:background="@drawable/bg_nav_btn"
                android:padding="@dimen/padding_nav_icon_right"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imv_nav_right"
                android:layout_width="@dimen/nav_height"
                android:layout_height="@dimen/nav_height"
                android:background="@drawable/bg_nav_btn"
                android:padding="@dimen/padding_nav_icon_right"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>