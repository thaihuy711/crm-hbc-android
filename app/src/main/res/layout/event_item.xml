<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/width_status_sm"
    android:layout_marginLeft="@dimen/item_offset_work"
    android:layout_marginRight="@dimen/margin_top_btn_login"
    android:layout_marginTop="@dimen/width_status_sm"
    android:orientation="vertical"
    font:cardBackgroundColor="@android:color/white"
    font:cardCornerRadius="@dimen/card_corner_10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/icPhone"
            android:layout_width="@dimen/padding_profile_menu"
            android:layout_height="@dimen/padding_profile_menu"
            android:background="@drawable/bg_phone"
            android:visibility="visible"
            >

            <ImageView
                android:layout_width="@dimen/height_icon_profile"
                android:layout_height="@dimen/height_icon_profile"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_serch_box"
                android:src="@drawable/ic_phone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/icGroup"
            android:layout_width="@dimen/padding_profile_menu"
            android:layout_height="@dimen/padding_profile_menu"
            android:background="@drawable/bg_group"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/height_icon_profile"
                android:layout_height="@dimen/height_icon_profile"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_serch_box"
                android:src="@drawable/ic_group"
                />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/height_icon_menu"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="@dimen/width_status"
            android:layout_height="@dimen/height_status"
            android:layout_gravity="right"
            android:background="@drawable/bg_status_blue"
            >

            <bys.crm.hbc.views.CustomFontTextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_left_8"
                android:text="@string/txt_dont_start"
                android:textColor="#fff"
                android:textSize="@dimen/text_small_10"
                font:fontText="fonts/sf_pro_display_regular.otf"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >

            <bys.crm.hbc.views.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:text="@string/txt_title"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_small_13"
                font:fontText="fonts/sf_pro_display_regular.otf"
                />

            <bys.crm.hbc.views.CustomFontTextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.9"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_small_14"
                font:fontText="fonts/sf_pro_display_light.otf"
                />

        </LinearLayout>
        <include layout="@layout/line_layout_active"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >

            <bys.crm.hbc.views.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:text="@string/txt_start"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_small_13"
                font:fontText="fonts/sf_pro_display_regular.otf"
                />

            <bys.crm.hbc.views.CustomFontTextView
                android:id="@+id/tvStart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.9"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_small_14"
                font:fontText="fonts/sf_pro_display_light.otf"
                />

        </LinearLayout>

        <include layout="@layout/line_layout_active"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            >

            <bys.crm.hbc.views.CustomFontTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:text="@string/txt_end"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_small_13"
                font:fontText="fonts/sf_pro_display_regular.otf"
                />

            <bys.crm.hbc.views.CustomFontTextView
                android:id="@+id/tvEnd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.9"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_small_14"
                font:fontText="fonts/sf_pro_display_light.otf"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
