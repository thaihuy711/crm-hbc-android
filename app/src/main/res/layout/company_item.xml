<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:round_image="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <bys.crm.hbc.views.CustomFontTextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/heigh_icon_small_2"
        android:text="Andri Nguyễn"
        android:textColor="#494A57"
        android:textSize="@dimen/text_large_17" />

    <bys.crm.hbc.views.CustomFontTextView
        android:id="@+id/tvAssgined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/width_status_sm"
        android:singleLine="true"
        android:text="Phân công: Hieu Nguyen"
        android:textColor="#A0A0A0"
        android:textSize="@dimen/text_small_12"
        font:fontText="fonts/sf_pro_display_regular.otf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_top_btn_login"
        android:background="#D8D8D8" />

</LinearLayout>