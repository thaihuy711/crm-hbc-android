<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <bys.crm.hbc.views.CustomFontButton
            android:id="@+id/btnPersonal"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_tab"
            android:layout_weight="1"
            android:background="@drawable/bg_tab"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/txt_personal"
            android:textColor="#fff"
            android:textSize="15sp"
            font:fontText="fonts/sf_pro_display_regular.otf" />
        <View
            android:layout_width="15dp"
            android:layout_height="1dp" />


        <bys.crm.hbc.views.CustomFontButton
            android:id="@+id/btnCompany"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_tab"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/txt_company"
            android:textColor="#fff"
            android:textSize="15sp"
            font:fontText="fonts/sf_pro_display_regular.otf" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>